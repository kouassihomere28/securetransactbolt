modules = ["nodejs-20", "postgresql-16"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run server"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8081
externalPort = 80

[[ports]]
localPort = 8082
externalPort = 3000

[[ports]]
localPort = 8083
externalPort = 3001

[[ports]]
localPort = 8084
externalPort = 3002

[[ports]]
localPort = 8085
externalPort = 3003

[[ports]]
localPort = 8086
externalPort = 4200

[workflows]
runButton = "Start Full App"

[[workflows.workflow]]
name = "Start App"
author = 43407251
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Full Stack App"
author = 43407251
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run server"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Dev App"
author = 43407251
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run server &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 3"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Start Stable"
author = 43407251
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run server &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 5"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --clear"

[[workflows.workflow]]
name = "Restart App"
author = 43407251
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"tsx server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"expo start\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run server &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 5"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --clear"

[[workflows.workflow]]
name = "Start Full App"
author = 43407251
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run server"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
